/**
 * 8-way demultiplexor:
 * {a, b, c, d, e, f, g, h} = {in, 0, 0, 0, 0, 0, 0, 0} if sel == 000
 *                            {0, in, 0, 0, 0, 0, 0, 0} if sel == 001
 *                            etc.
 *                            {0, 0, 0, 0, 0, 0, 0, in} if sel == 111
 */

CHIP DMux8Way {
    IN in, sel[3];
    OUT a, b, c, d, e, f, g, h;

    PARTS:
    Not(in=sel[0], out=nsel0);
    Not(in=sel[1], out=nsel1);
    Not(in=sel[2], out=nsel2);

    And3(a=nsel2, b=nsel1, c=nsel0, out=is0);
    And3(a=nsel2, b=nsel1, c=sel[0], out=is1);
    And3(a=nsel2, b=sel[1], c=nsel0, out=is2);
    And3(a=nsel2, b=sel[1], c=sel[0], out=is3);
    And3(a=sel[2], b=nsel1, c=nsel0, out=is4);
    And3(a=sel[2], b=nsel1, c=sel[0], out=is5);
    And3(a=sel[2], b=sel[1], c=nsel0, out=is6);
    And3(a=sel[2], b=sel[1], c=sel[0], out=is7);

    And(a=is0, b=in, out=a);
    And(a=is1, b=in, out=b);
    And(a=is2, b=in, out=c);
    And(a=is3, b=in, out=d);
    And(a=is4, b=in, out=e);
    And(a=is5, b=in, out=f);
    And(a=is6, b=in, out=g);
    And(a=is7, b=in, out=h);
}